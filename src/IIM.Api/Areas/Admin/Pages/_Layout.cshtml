@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IIM Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin">IIM Admin</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin/models">Models</a>
                <a class="nav-link" href="/admin/system">System</a>
                <a class="nav-link" href="/admin/users">Users</a>
                <a class="nav-link" href="/admin/audit">Audit</a>
            </div>
        </div>
    </nav>
    
    <div class="container-fluid mt-3">
        @RenderBody()
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
