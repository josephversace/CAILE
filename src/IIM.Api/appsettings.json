{
  "Deployment": {
    "Mode": "Standalone",
    "CanChangeMode": true,
    "RequireAuth": false,
    "ApiUrl": "http://localhost:5080",
    "AdminEmail": "admin@iim.local",
    "IsDevelopment": true
  },

  "Storage": {
    "BasePath": "C:\\ProgramData\\IIM",
    "MinIO": {
      "Endpoint": "localhost:9000",
      "AccessKey": "minioadmin",
      "SecretKey": "minioadmin",
      "UseSSL": false,
      "BucketPrefix": "iim",
      "Region": "us-east-1",
      "SessionToken": ""
    }
  },

  "Qdrant": {
    "BaseUrl": "http://localhost:6333",
    "ApiKey": "",
    "DefaultCollection": "documents",
    "TimeoutSeconds": 30,
    "MaxRetries": 3
  },

  "EmbedService": {
    "BaseUrl": "http://localhost:8081",
    "Model": "all-MiniLM-L6-v2",
    "BatchSize": 32,
    "MaxTokens": 512,
    "TimeoutSeconds": 30
  },

  "Evidence": {
    "EnableEncryption": false,
    "RequireDualControl": false,
    "MaxFileSizeMb": 10240,
    "AllowedFileTypes": [
      ".pdf",
      ".docx",
      ".xlsx",
      ".txt",
      ".jpg",
      ".png",
      ".mp4",
      ".wav",
      ".mp3",
      ".dd",
      ".e01",
      ".raw",
      ".img"
    ],
    "ChainOfCustodyRequired": true,
    "IntegrityCheckInterval": 21600
  },

  "Inference": {
    "MaxConcurrentInferences": 3,
    "DefaultTimeoutSeconds": 60,
    "ModelCachePath": "C:\\ProgramData\\IIM\\Models",
    "MaxMemoryBytes": 128849018880,
    "EnableGpuAcceleration": true,
    "DefaultProvider": "DirectML",
    "PriorityQueueEnabled": true,
    "BatchProcessingEnabled": true
  },

  "Wsl": {
    "DefaultDistro": "IIM-Ubuntu",
    "AutoStart": true,
    "ServiceCheckIntervalSeconds": 30,
    "StartupTimeoutSeconds": 60,
    "AutoStartServices": [
      "docker",
      "qdrant",
      "embeddings"
    ],
    "DockerRequired": true,
    "MinMemoryGB": 8,
    "PreferredMemoryGB": 16
  },

  "Audit": {
    "LogPath": "C:\\ProgramData\\IIM\\Audit",
    "EnableDetailedLogging": true,
    "RetentionDays": 365,
    "RequireTamperEvidence": true,
    "LogLevel": "Information",
    "IncludeRequestBody": true,
    "IncludeResponseBody": false,
    "SensitiveDataMasking": true
  },
"MinIO": {
      "Endpoint": "localhost:9000",
      "AccessKey": "minioadmin",
      "SecretKey": "minioadmin",
  "UseSSL": false,
      "Deployment": {
      "Mode": "Standalone",
      "RequireAuth": false
    }
    },
"ModelTemplates": {
    "ActiveTemplateId": "default",
    "Templates": {
      "default": {
        "Id": "default",
        "Name": "Standard Investigation",
        "Description": "Default template for general investigations",
        "LLMModel": "llama-2-7b",
        "VisionModel": "clip-base",
        "OCRModel": "tesseract-5",
        "EmbeddingModel": "all-MiniLM-L6-v2",
        "EnabledTools": [
          "web-search",
          "entity-extraction",
          "ocr",
          "transcription",
          "image-analysis"
        ],
        "Parameters": {
          "Temperature": 0.7,
          "MaxTokens": 2048,
          "TopP": 0.9
        }
      },
      "forensic": {
        "Id": "forensic",
        "Name": "Digital Forensics",
        "Description": "Optimized for digital forensic investigations",
        "LLMModel": "llama-2-13b",
        "VisionModel": "clip-large",
        "OCRModel": "tesseract-5-best",
        "EmbeddingModel": "all-mpnet-base-v2",
        "EnabledTools": [
          "hash-analysis",
          "metadata-extraction",
          "file-carving",
          "registry-analysis",
          "timeline-generation"
        ],
        "Parameters": {
          "Temperature": 0.3,
          "MaxTokens": 4096,
          "TopP": 0.95
        }
      }
    }
  },

  "Jwt": {
    "Key": "your-256-bit-secret-key-for-jwt-token-generation-change-in-production",
    "Issuer": "IIM-API",
    "Audience": "IIM-Clients",
    "ExpirationMinutes": 60,
    "RefreshExpirationDays": 7
  },

  "OpenIddict": {
    "EncryptionCertificateThumbprint": "",
    "SigningCertificateThumbprint": "",
    "EnableDevelopmentKeys": true,
    "RequireHttps": false
  },

  "ConnectionStrings": {
    "ConfigDb": "Data Source=C:\\ProgramData\\IIM\\Database\\config.db",
    "ModelDb": "Data Source=C:\\ProgramData\\IIM\\Database\\models.db",
    "AuthDb": "Data Source=C:\\ProgramData\\IIM\\Database\\auth.db",
    "AuditDb": "Data Source=C:\\ProgramData\\IIM\\Database\\audit.db"
  },

  "Development": {
    "UseInMemoryQdrant": false,
    "UseLocalModels": true,
    "SkipWslCheck": false,
    "MockExternalServices": false,
    "EnableSwagger": true,
    "EnableDetailedErrors": true
  },

  "Performance": {
    "WarningThresholdMs": 500,
    "CriticalThresholdMs": 2000,
    "EnableMetrics": true,
    "MetricsRetentionHours": 24
  },

  "RateLimiting": {
    "EnableRateLimiting": false,
    "PermitLimit": 100,
    "Window": "00:01:00",
    "QueueProcessingOrder": "OldestFirst",
    "QueueLimit": 50
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5000",
      "http://localhost:5001",
      "http://localhost:5080"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },

  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:5080"
      }
    },
    "Limits": {
      "MaxRequestBodySize": 1073741824,
      "MaxRequestHeaderCount": 100
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "IIM": "Debug"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
      }
    }
  },

  "AllowedHosts": "*"
}