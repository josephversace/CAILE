{
  "Deployment": {
    "Mode": "Server",
    "CanChangeMode": false,
    "RequireAuth": true,
    "IsDevelopment": false
  },

  "Development": {
    "UseInMemoryQdrant": false,
    "UseLocalModels": false,
    "SkipWslCheck": false,
    "MockExternalServices": false,
    "EnableSwagger": false,
    "EnableDetailedErrors": false
  },

  "Evidence": {
    "EnableEncryption": true,
    "RequireDualControl": true
  },

  "Audit": {
    "RequireTamperEvidence": true,
    "IncludeRequestBody": false,
    "IncludeResponseBody": false,
    "SensitiveDataMasking": true
  },

  "OpenIddict": {
    "RequireHttps": true
  },

  "RateLimiting": {
    "EnableRateLimiting": true
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "IIM": "Information"
    }
  },

  "Cors": {
    "AllowedOrigins": [
      "https://iim.agency.local"
    ]
  }
}